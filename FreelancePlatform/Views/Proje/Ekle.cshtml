@model FreelancePlatform.Models.Proje

@{
    ViewData["Title"] = "Proje Yayınla";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding-bottom: 64px;
    }

    .project-card {
        background-color: #fff;
        border-radius: 2rem;
        padding: 2.7rem 2.3rem 2.2rem 2.3rem;
        box-shadow: 0 12px 36px rgba(45,108,223,0.12);
        max-width: 620px;
        margin: 48px auto;
        animation: fadeIn 0.6s cubic-bezier(.39,.575,.56,1) both;
    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(28px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .project-card h2 {
        color: #2d6cdf;
        font-weight: 700;
        margin-bottom: 1.7rem;
        text-align: center;
        letter-spacing: -.5px;
    }

    .form-label {
        font-weight: 700;
        color: #215bb6;
    }

    .form-control, .form-select {
        border-radius: 1.1rem;
        border: 1.5px solid #cfd8ed;
        font-size: 1.06rem;
        padding: 0.73rem 1.1rem;
        margin-bottom: .09rem;
        background: #f9fcff;
    }

        .form-control:focus, .form-select:focus {
            border-color: #2d6cdf;
            box-shadow: 0 0 6px rgba(45,108,223,0.13);
        }

    .btn-success {
        background: linear-gradient(90deg,#2d6cdf 65%,#37c773 100%);
        border: none;
        font-weight: 700;
        border-radius: 2rem;
        padding: 0.7rem 2rem;
        font-size: 1.11rem;
        box-shadow: 0 4px 16px rgba(45,108,223,0.11);
        transition: background .16s, transform .13s;
    }

        .btn-success:hover {
            background: linear-gradient(90deg,#37c773 0%,#2d6cdf 100%);
            color: #fff;
            transform: scale(1.04);
        }

    .text-danger {
        font-size: 0.98rem;
        font-weight: 600;
    }
    @@media (max-width: 700px) {
        .project-card

    {
        padding: 1.1rem 0.3rem 1.1rem 0.3rem;
    }

    }</style>




<!-- Ana İçerik -->
<div class="project-card">
    <h2><i class="fas fa-bullhorn me-2"></i>Proje Yayınla</h2>

    <form asp-action="Ekle" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Baslik" class="form-label"></label>
            <input asp-for="Baslik" class="form-control" placeholder="Proje başlığını girin" />
            <span asp-validation-for="Baslik" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Aciklama" class="form-label"></label>
            <textarea asp-for="Aciklama" class="form-control" rows="4" placeholder="Projeniz hakkında detaylı açıklama yazın"></textarea>
            <span asp-validation-for="Aciklama" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Butce" class="form-label"></label>
            <input asp-for="Butce" class="form-control" type="number" step="0.01" placeholder="Tahmini bütçe" />
            <span asp-validation-for="Butce" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ParaBirimi" class="form-label">Para Birimi</label>
            <select asp-for="ParaBirimi" class="form-select">
                <option value="TL">TL (₺)</option>
                <option value="USD">USD ($)</option>
                <option value="EUR">EUR (€)</option>
            </select>
            <span asp-validation-for="ParaBirimi" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100"><i class="fas fa-paper-plane me-1"></i> Proje Yayınla</button>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
