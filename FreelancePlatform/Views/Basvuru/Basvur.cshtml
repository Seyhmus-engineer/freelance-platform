@{
    ViewData["Title"] = "Projeye Başvur";
    var projeId = ViewBag.ProjeId;
    var paraBirimi = ViewBag.ParaBirimi as string ?? "TL";
    var projeBaslik = ViewBag.ProjeBaslik as string ?? "";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        min-height: 100vh;
    }

    .basvuru-container {
        max-width: 480px;
        margin: 48px auto 0 auto;
        background: #fff;
        box-shadow: 0 8px 40px rgba(50,60,100,0.10);
        border-radius: 2rem;
        padding: 2.4rem 2rem 2rem 2rem;
        animation: fadeIn 0.6s cubic-bezier(.39,.575,.56,1) both;
    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .basvuru-header {
        color: #2d6cdf;
        font-weight: 700;
        letter-spacing: -.6px;
        margin-bottom: 0.8rem;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
    }

    .input-group-text {
        background: #eef4fd;
        font-weight: 700;
        color: #215bb6;
        border-left: 0;
    }

    .btn-basvur {
        padding: 0.7rem 2.5rem;
        font-size: 1.13rem;
        border-radius: 2rem;
        background: #37c773;
        border: none;
        font-weight: 700;
        transition: background .19s;
    }

        .btn-basvur:hover {
            background: #25a15d;
        }
</style>

<div class="basvuru-container">
    <div class="mb-3 text-center">
        <i class="fas fa-paper-plane fa-2x text-success mb-2"></i>
        <h2 class="basvuru-header mb-0">Projeye Başvur</h2>
        <div class="fw-bold mb-3 text-primary">
            <i class="fas fa-folder-open me-1"></i> @projeBaslik
        </div>
    </div>
    <form asp-action="Basvur" method="post" autocomplete="off">
        <input type="hidden" name="projeId" value="@projeId" />

        <div class="mb-3">
            <label for="mesaj" class="form-label">Mesajınız <span class="text-danger">*</span></label>
            <textarea name="mesaj" class="form-control" rows="4" required placeholder="Proje için kısaca kendinizi tanıtın ve teklifinizi açıklayın."></textarea>
        </div>
        <div class="mb-3">
            <label for="teklifTutari" class="form-label">Teklif Tutarı <span class="text-danger">*</span></label>
            <div class="input-group">
                <input type="number" step="0.01" min="0" name="teklifTutari" class="form-control" required placeholder="Örn: 500" />
                <span class="input-group-text">@paraBirimi</span>
            </div>
        </div>
        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-basvur">
                <i class="fas fa-check-circle me-2"></i> Başvur
            </button>
        </div>
    </form>
</div>
