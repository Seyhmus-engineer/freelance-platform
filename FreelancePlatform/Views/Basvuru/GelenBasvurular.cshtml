@model List<FreelancePlatform.Models.Basvuru>

@{
    ViewData["Title"] = "Gelen Başvurular";
}

<h2>Size Gelen Başvurular</h2>

@if (!Model.Any())
{
    <p>Henüz başvuru yapılmadı.</p>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Proje ID</th>
                <th>Freelancer</th>
                <th>Mesaj</th>
                <th>Teklif (₺)</th>
                <th>Tarih</th>
                <th>İşlem</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.ProjeID</td>
                    <td>@b.FreelancerEmail</td>
                    <td>@b.Mesaj</td>
                    <td>@b.TeklifTutari.ToString("0.00") ₺</td>
                    <td>@b.BasvuruTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           href="/Mesaj/Mesajlasma?projeId=@b.ProjeID&digerEmail=@b.FreelancerEmail">
                            Mesajlaş
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
