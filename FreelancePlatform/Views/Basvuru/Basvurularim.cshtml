@model List<FreelancePlatform.Models.Basvuru>

@{
    ViewData["Title"] = "Yaptığım Başvurular";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        min-height: 100vh;
    }

    .bv-table th {
        background: #2d6cdf !important;
        color: #fff !important;
        text-align: center;
    }

    .bv-table td {
        vertical-align: middle !important;
        background: rgba(255,255,255,0.97);
        text-align: center;
    }

    .bv-table tr:hover td {
        background: #eef4fd !important;
        transition: .18s;
    }

    .badge-budget {
        background: #37c773;
        font-size: 1rem;
    }

    .badge-currency {
        background: #1d5be7;
        font-size: .98rem;
    }

    .badge-date {
        background: #f1b04e;
        color: #232526;
        font-size: .97rem;
    }

    @@media (max-width: 768px) {
        .bv-table {
            font-size: .95rem;
        }
    }
</style>

<div class="container my-5">
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-clipboard-list fa-2x text-primary me-2"></i>
        <h2 class="fw-bold m-0">Yaptığım Başvurular</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-5">
            <i class="fas fa-info-circle me-2"></i>
            Henüz hiçbir projeye başvurmadınız.
        </div>
    }
    else
    {
        <div class="table-responsive rounded shadow-sm">
            <table class="table bv-table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Proje</th>
                        <th>Mesajınız</th>
                        <th>Teklif</th>
                        <th>Başvuru Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>
                                <span class="fw-bold text-primary">
                                    <i class="fas fa-folder-open me-1"></i>
                                    @(!string.IsNullOrWhiteSpace(b.ProjeBaslik) ? b.ProjeBaslik : $"#{b.ProjeID}")
                                </span>
                            </td>
                            <td style="max-width:220px;">
                                <span class="text-dark text-truncate d-inline-block" style="max-width:200px;">
                                    @(!string.IsNullOrEmpty(b.TeklifMesaji) ? b.TeklifMesaji : b.Mesaj)
                                </span>
                            </td>
                            <td>
                                <span class="badge badge-budget">@b.TeklifTutari.ToString("0.00")</span>
                                <span class="badge badge-currency">@b.ParaBirimi</span>
                            </td>
                            <td>
                                <span class="badge badge-date">@b.BasvuruTarihi.ToString("dd.MM.yyyy HH:mm")</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
