@model FreelancePlatform.Models.Proje

@{
    ViewData["Title"] = "Proje Detayı";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        min-height: 100vh;
    }

    .proje-detay-card {
        max-width: 540px;
        margin: 48px auto;
        background: #fff;
        border-radius: 2.3rem;
        box-shadow: 0 8px 40px rgba(55,108,223,0.13);
        padding: 2.2rem 2rem 2rem 2rem;
        animation: fadeIn 0.5s cubic-bezier(.39,.575,.56,1) both;
    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    h2, h4 {
        color: #2d6cdf;
        font-weight: 700;
        text-align: center;
    }

    .proje-detay-card p {
        font-size: 1.09rem;
        margin-bottom: 0.7rem;
        color: #205e9b;
    }

    .form-label, label {
        font-weight: 600;
        color: #215bb6;
    }

    .form-control {
        border-radius: 9px;
        border: 1.5px solid #cfd8ed;
        font-size: 1.06rem;
        transition: border-color 0.23s;
    }

        .form-control:focus {
            border-color: #2d6cdf;
            box-shadow: 0 0 6px rgba(45,108,223,0.13);
        }

    .btn-primary {
        background: linear-gradient(90deg,#2d6cdf 50%,#37c773 100%);
        border: none;
        font-weight: 700;
        padding: 0.7rem 2.2rem;
        border-radius: 1.7rem;
        transition: background .17s, transform .13s;
        font-size: 1.09rem;
        box-shadow: 0 4px 16px rgba(45,108,223,0.11);
    }

        .btn-primary:hover {
            background: linear-gradient(90deg,#37c773 0%,#2d6cdf 100%);
            color: #fff;
            transform: scale(1.04);
        }

    .alert {
        border-radius: 1rem;
        font-size: 1.03rem;
        margin-bottom: 1.1rem;
    }
</style>


<h2>@Model.Baslik</h2>

<p><strong>Açıklama:</strong> @Model.Aciklama</p>
<p><strong>Bütçe:</strong> @Model.Butce ₺</p>
<p><strong>Yayınlayan:</strong> @Model.YayinlayanEmail</p>

@if (TempData["Uyari"] != null)
{
    <div class="alert alert-warning">@TempData["Uyari"]</div>
}
@if (TempData["Basarili"] != null)
{
    <div class="alert alert-success">@TempData["Basarili"]</div>
}

<h4 class="mt-4">Bu projeye başvur</h4>

<form asp-action="Basvur" method="post">
    <input type="hidden" name="projeId" value="@Model.ProjeID" />

    <div class="form-group mb-2">
        <label for="mesaj">Mesajınız:</label>
        <textarea name="mesaj" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group mb-3">
        <label for="teklifTutari">Teklif Tutarınız (₺):</label>
        <input type="number" step="0.01" name="teklifTutari" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Başvur</button>
</form>
