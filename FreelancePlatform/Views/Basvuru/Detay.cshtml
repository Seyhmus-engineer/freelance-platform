@model FreelancePlatform.Models.Proje

@{
    ViewData["Title"] = "Proje Detayı";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        min-height: 100vh;
    }

    .proje-detay-card {
        max-width: 560px;
        margin: 48px auto 0 auto;
        background: #fff;
        border-radius: 2.3rem;
        box-shadow: 0 8px 40px rgba(55,108,223,0.13);
        padding: 2.5rem 2rem 2rem 2rem;
    }

    .proje-title {
        color: #2d6cdf;
        font-weight: 700;
        letter-spacing: -.6px;
        margin-bottom: 1rem;
        text-shadow: 0 2px 12px rgba(33,91,182,0.08);
    }

    .proje-badge {
        font-size: 1.13rem;
        border-radius: 1.2rem;
        padding: 0.25em 0.85em;
        margin-left: .3em;
        margin-bottom: .2em;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-basvur {
        padding: 0.65rem 2.2rem;
        font-size: 1.07rem;
        border-radius: 2rem;
        background: #37c773;
        border: none;
        font-weight: 700;
        transition: background .19s;
    }

        .btn-basvur:hover {
            background: #25a15d;
        }
</style>

<div class="proje-detay-card">
    <h2 class="proje-title">
        <i class="fas fa-folder-open me-2"></i>@Model.Baslik
    </h2>
    <div class="mb-2 fs-5 text-secondary">
        <i class="fas fa-align-left me-1"></i><strong>Açıklama:</strong> @Model.Aciklama
    </div>
    <div class="mb-2">
        <span class="badge bg-success bg-opacity-75 fs-6 proje-badge">
            <i class="fas fa-coins"></i> @Model.Butce.ToString("0.00")
        </span>
        <span class="badge bg-primary bg-opacity-75 fs-6 proje-badge">
            @Model.ParaBirimi
        </span>
    </div>
    <div class="mb-3">
        <span class="badge bg-info text-dark fs-6 proje-badge">
            <i class="fas fa-user-tie"></i> @Model.YayinlayanAdSoyad
        </span>
        <br />
        <small class="text-muted">@Model.YayınlayanEmail</small>
    </div>

    @if (TempData["Uyari"] != null)
    {
        <div class="alert alert-warning">@TempData["Uyari"]</div>
    }
    @if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success">@TempData["Basarili"]</div>
    }

    <h4 class="mt-4 text-primary">
        <i class="fas fa-paper-plane"></i> Bu projeye başvur
    </h4>
    <form asp-action="Basvur" method="post" autocomplete="off">
        <input type="hidden" name="projeId" value="@Model.ProjeID" />

        <div class="mb-3">
            <label for="mesaj" class="form-label">Mesajınız <span class="text-danger">*</span></label>
            <textarea name="mesaj" class="form-control" rows="4" required placeholder="Proje için kısaca kendinizi tanıtın ve teklifinizi açıklayın."></textarea>
        </div>
        <div class="mb-3">
            <label for="teklifTutari" class="form-label">Teklif Tutarınız <span class="text-danger">*</span></label>
            <div class="input-group">
                <input type="number" step="0.01" min="0" name="teklifTutari" class="form-control" required placeholder="Örn: 250" />
                <span class="input-group-text">@Model.ParaBirimi</span>
            </div>
        </div>
        <div class="d-grid mt-3">
            <button type="submit" class="btn btn-basvur">
                <i class="fas fa-paper-plane me-1"></i> Başvur
            </button>
        </div>
    </form>
</div>
