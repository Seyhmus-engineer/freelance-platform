@model FreelancePlatform.Models.AppUser
@{
    ViewData["Title"] = "İşveren Paneli";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold text-warning"><i class="fas fa-briefcase"></i> İşveren Paneli</h2>
            <p class="lead mb-0">Hoş geldiniz, <b>@Model.AdSoyad</b>!</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-warning h-100 shadow">
            <div class="card-body text-center">
                <i class="fas fa-envelope fa-3x mb-3 text-warning"></i>
                <h5 class="card-title">Mesajlarım</h5>
                <p class="card-text">Gelen ve gönderilen tüm mesajları görüntüleyin.</p>
                <a href="/Mesaj/Mesajlarim" class="btn btn-warning">Mesajlarım</a>
            </div>
        </div>
    </div>



    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-success h-100 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-plus-square fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Yeni Proje Yayınla</h5>
                    <p class="card-text">İş ilanı oluşturun, yeni projeler yayınlayın.</p>
                    <a href="/Proje/Ekle" class="btn btn-success">Proje Yayınla</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info h-100 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-3x mb-3 text-info"></i>
                    <h5 class="card-title">Projelerim & Başvurular</h5>
                    <p class="card-text">Tüm projelerinizi ve onlara gelen başvuruları inceleyin.</p>
                    <a href="/Proje/Listele" class="btn btn-info">Projelerim</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-primary h-100 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-inbox fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gelen Başvurular</h5>
                    <p class="card-text">Projeleriniz için gelen başvuruları görüntüleyin.</p>
                    <a href="/Basvuru/GelenBasvurular" class="btn btn-primary">Gelen Başvurular</a>
                </div>
            </div>
        </div>
    </div>
</div>

