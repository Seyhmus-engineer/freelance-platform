@model FreelancePlatform.Models.AppUser

@{
    ViewData["Title"] = "Kayıt Ol";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #232526 0%, #414345 100%);
        min-height: 100vh;
    }

    .register-card {
        background: rgba(255,255,255,0.94);
        border-radius: 1.3rem;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,.17);
        padding: 2.5rem 2rem 1.5rem 2rem;
        margin-bottom: 2rem;
    }

    .register-icon {
        font-size: 2.1rem;
        color: #2d6cdf;
        margin-bottom: .5rem;
    }

    .btn-primary {
        background: #2d6cdf;
        border: none;
    }

    .link-secondary {
        color: #414345 !important;
    }
</style>

<div class="container py-5 d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5">

            <div class="register-card mb-4">
                <div class="text-center">
                    <i class="fa-solid fa-user-plus register-icon"></i>
                    <h3 class="fw-bold text-primary">Kayıt Ol</h3>
                </div>

                @if (ViewBag.Hata != null)
                {
                    <div class="alert alert-danger text-center mt-2">@ViewBag.Hata</div>
                }
                @if (ViewBag.Basarili != null)
                {
                    <div class="alert alert-success text-center mt-2">@ViewBag.Basarili</div>
                }

                <form asp-action="Kayit" method="post" class="mt-3">

                    <div class="mb-3">
                        <label class="form-label">Ad Soyad</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="AdSoyad" class="form-control" placeholder="Ad Soyad" required />
                        </div>
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-posta</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="EmailAdres" type="email" class="form-control" placeholder="Email" required />
                        </div>
                        <span asp-validation-for="EmailAdres" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" required />
                        </div>
                        <span asp-validation-for="Sifre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rol</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            @* Yalnızca Freelancer veya İşveren seçimi! *@
                            @Html.DropDownListFor(m => m.Rol, new SelectList(new[] { "Freelancer", "Isveren" }), "Rol Seçiniz", new { @class = "form-select", required = "required" })
                        </div>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-bold">Kayıt Ol</button>
                </form>
            </div>

            <div class="text-center mt-3">
                <span class="text-light">Zaten hesabınız var mı? <a href="/Kullanici/Giris" class="fw-bold text-primary">Giriş Yap</a></span>
            </div>

        </div>
    </div>
</div>
