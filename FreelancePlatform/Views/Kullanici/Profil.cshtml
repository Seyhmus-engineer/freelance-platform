@model FreelancePlatform.Models.AppUser

@{
    ViewData["Title"] = "Profilim";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />


<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        color: #222;
        min-height: 100vh;
    }

    .profile-container {
        background: #fff;
        border-radius: 2.2rem;
        box-shadow: 0 12px 36px rgba(45,108,223,0.12);
        padding: 2.9rem 2.6rem 2.3rem 2.6rem;
        max-width: 460px;
        width: 100%;
        text-align: center;
        animation: fadeInUp 0.8s cubic-bezier(.39,.575,.56,1) both;
        margin: 60px auto;
    }
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .profile-pic {
        width: 126px;
        height: 126px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #2d6cdf;
        box-shadow: 0 4px 22px rgba(45,108,223,0.19);
        margin: 0 auto 1.7rem auto;
        background: #eaf2fc;
    }

    h2 {
        font-weight: 800;
        font-size: 1.7rem;
        margin-bottom: 1.2rem;
        color: #2d6cdf;
        letter-spacing: .5px;
        text-transform: capitalize;
    }

    ul.profile-info {
        list-style: none;
        padding: 0;
        margin: 0 0 2.1rem 0;
        font-size: 1.10rem;
        color: #425d8b;
        border-top: 2.5px solid #eaf2fc;
        border-radius: 0 0 20px 20px;
    }

        ul.profile-info li {
            padding: 0.80rem 0;
            border-bottom: 1px solid #eaf2fc;
            display: flex;
            justify-content: space-between;
            font-weight: 500;
        }

            ul.profile-info li:last-child {
                border-bottom: none;
            }

            ul.profile-info li strong {
                color: #2d6cdf;
                min-width: 112px;
                text-align: left;
                font-weight: 700;
            }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 1.1rem;
    }

        .btn-group a {
            text-decoration: none;
            padding: 0.67rem 2rem;
            border-radius: 2rem;
            font-weight: 700;
            color: #fff;
            transition: background .2s, color .2s, transform .15s;
            box-shadow: 0 5px 18px rgba(55,108,223,0.08);
            user-select: none;
            font-size: 1.08rem;
            border: none;
        }

    .btn-edit {
        background: linear-gradient(90deg,#2d6cdf 70%,#37c773 100%);
    }

        .btn-edit:hover, .btn-edit:focus {
            background: linear-gradient(90deg,#37c773 20%,#2d6cdf 100%);
            color: #fff;
            transform: scale(1.05);
        }

    .btn-logout {
        background: #e23d3d;
        box-shadow: 0 4px 12px rgba(226,61,61,0.09);
    }

        .btn-logout:hover, .btn-logout:focus {
            background: #a62222;
            color: #fff;
            transform: scale(1.05);
        }
    @@media (max-width: 520px) {
        .profile-container

    {
        padding: 1.3rem 0.7rem;
        max-width: 100%;
    }

    ul.profile-info li {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.22rem;
        font-size: .97rem;
    }

        ul.profile-info li strong {
            min-width: 0;
        }

    .btn-group {
        flex-direction: column;
        gap: .7rem;
    }

        .btn-group a {
            width: 100%;
            text-align: center;
        }

    }</style>


<div class="profile-container" role="main" aria-label="Kullanıcı Profil Bilgileri">
    <img class="profile-pic" alt="Profil Fotoğrafı"
         src="@(string.IsNullOrEmpty(Model.ProfilResmiBase64) ? Url.Content("~/images/kprofil.png") : $"data:image/png;base64,{Model.ProfilResmiBase64}")" />
    <h2>@Model.AdSoyad</h2>

    <ul class="profile-info" aria-live="polite">
        <li><strong>Kullanıcı ID:</strong> <span>@Model.KullaniciID</span></li>
        <li><strong>Email:</strong> <span>@Model.EmailAdres</span></li>
        <li><strong>Rol:</strong> <span>@Model.Rol</span></li>
        <li><strong>Şifre:</strong> <span>********</span></li>
    </ul>

    <div class="btn-group">
        <a href="/Kullanici/ProfilDuzenle" class="btn-edit" role="button" aria-label="Profilimi Düzenle">Profilimi Düzenle</a>
        <a href="/Kullanici/Cikis" class="btn-logout" role="button" aria-label="Çıkış Yap">Çıkış Yap</a>
    </div>
</div>
