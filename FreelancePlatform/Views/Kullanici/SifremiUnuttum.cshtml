@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #e6f0ff 0%, #f8fafc 100%);
        background-size: cover;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #222;
        margin: 0;
    }

    .reset-card {
        background: #fff;
        border-radius: 2rem;
        box-shadow: 0 12px 36px rgba(45,108,223,0.13);
        padding: 2.3rem 2.1rem 2rem 2.1rem;
        animation: fadeIn 0.7s cubic-bezier(.39,.575,.56,1) both;
    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(32px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .reset-icon {
        font-size: 2.6rem;
        color: #2d6cdf;
        margin-bottom: 1rem;
    }

    h3 {
        color: #2d6cdf;
        font-weight: 700;
    }

    .btn-primary {
        background: linear-gradient(90deg,#2d6cdf 60%,#37c773 100%);
        border: none;
        font-weight: 700;
        padding: 0.68rem 2rem;
        border-radius: 2rem;
        font-size: 1.07rem;
        transition: background .17s, transform .13s;
        box-shadow: 0 4px 14px rgba(45,108,223,0.10);
    }

        .btn-primary:hover {
            background: linear-gradient(90deg,#37c773 0%,#2d6cdf 100%);
            color: #fff;
            transform: scale(1.04);
        }

    label {
        font-weight: 600;
        color: #205e9b;
        margin-bottom: .3rem;
    }

    .form-control {
        border-radius: 10px;
        border: 1.5px solid #cfd8ed;
        font-size: 1.07rem;
        transition: border-color 0.17s;
    }

        .form-control:focus {
            border-color: #2d6cdf;
            box-shadow: 0 0 6px rgba(45,108,223,0.13);
        }

    .alert {
        border-radius: 1.2rem;
        font-size: 0.99rem;
    }
    @@media (max-width: 700px) {
        .reset-card

    {
        padding: 1.3rem 0.7rem 1.1rem 0.7rem;
    }

    }
</style>


<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5">

            <div class="reset-card text-center">
                <i class="fas fa-unlock-alt reset-icon"></i>
                <h3 class="fw-bold mb-4">Şifremi Unuttum</h3>

                @if (ViewBag.Basarili != null)
                {
                    <div class="alert alert-success text-start">@ViewBag.Basarili</div>
                }
                @if (ViewBag.Hata != null)
                {
                    <div class="alert alert-danger text-start">@ViewBag.Hata</div>
                }

                <form asp-action="SifremiUnuttum" method="post">
                    <div class="form-group mb-4 text-start">
                        <label for="email">Kayıtlı E-posta Adresiniz:</label>
                        <input type="email" name="email" class="form-control" placeholder="ornek@mail.com" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-paper-plane me-2"></i> Sıfırlama Linki Gönder
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
