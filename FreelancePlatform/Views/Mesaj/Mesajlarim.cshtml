@model List<FreelancePlatform.Models.Mesaj>

@{
    ViewData["Title"] = "Mesajlarım";
}

<h2>Mesajlarım</h2>

@if (!Model.Any())
{
    <p>Henüz mesajlaşma yok.</p>
}
else
{
    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Proje ID</th>
                <th>Gönderen</th>
                <th>Alıcı</th>
                <th>Mesaj</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.ProjeID</td>
                    <td>@m.GonderenEmail</td>
                    <td>@m.AliciEmail</td>
                    <td>@m.Icerik</td>
                    <td>@m.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
